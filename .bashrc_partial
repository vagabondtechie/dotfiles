[ -f ~/.bash_aliases ] && source ~/.bash_aliases
[ -f ~/.bash_functions ] && source ~/.bash_functions
[ -f ~/.git_aliases ] && source ~/.git_aliases
[ -f ~/.env_vars ] && source ~/.env_vars
[ -f ~/.path_vars ] && source ~/.path_vars

PS1_WITH_GIT_INFO="\[\e[1;36m\]\w\[\e[0m\] \$(git_info)\[\e[0m\]\n\[\e[1;37m\]|>\[\033[0;33m\] "
PS1_IN_PLAIN_ENGLISH="\[\e[36m\]You are here: (\w)\n\[\e[1;31m\]|>\[\e[1;33m\]|>\[\e[1;32m\]|>\[\e[0;33m\] "
PS1_MINIMAL="\[\e[1;36m\]->\[\e[0;33m\] "

export PS1=$PS1_MINIMAL

# Shell options related to accessiblity and history
HISTFILESIZE=100000
HISTSIZE=100000
PROMPT_COMMAND='history -a'
HISTCONTROL=ignoredups

shopt -s histappend
shopt -s cmdhist
shopt -s cdspell

